        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/child_item_servicesdetails_txtView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="nnsjfgtgscfegctghgnchgewyhdfh"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/child_item_servicesdetails_txtView_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.32"
            android:text="1"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/outline_blue_bg"/>
        <TextView
            android:id="@+id/child_item_servicesdetails_txtView_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_gravity="center"
